(constant act-quit 0 )
(constant act-take 1 )
(constant act-drop 2 )
(constant act-move 3 )
(constant act-inv  4 )
(constant act-look 5 )
(constant act-put  6 )
(constant act-examine 7 )


(object entryway -
    name "Entryway"
    description "A short, square segment of hallway between the interior of the house and the exterior."
    north kitchen
    west bedroom
    south "The door is locked.\n"
    doors 6
    junk (bedroom 54342 "gjires" )

)
(object - entryway
    name "table"
    description "A small, unsteady table."
    vocab ( <table> )
    is_takable 0
    is_container 1
)
(object - entryway
    name "chair"
    vocab ( <chair> )
)
(object - entryway
    name "painting"
    vocab ( <painting> )
)
(object - entryway
    name "fireplace"
    vocab ( <fireplace> <fire> <place> )
    is_takable 0
    is_container 1
)


(object kitchen -
    name "Kitchen"
    description "A well appointed kitchen, suitable for even the finest tastes."
    south entryway
)
(object - kitchen
    name "apricot"
    vocab ( <apricot> )
    article "an"
)
(object - kitchen
    name "turnip"
    vocab ( <turnip> )
)


(object bedroom -
    name "Bedroom"
    description "A simple bedroom with a cot visible."
    east entryway
)
(object - bedroom
    name "cot"
    vocab ( <bed> <cot> )
    is_takable 0
)

(object player entryway
    name "yourself"
    vocab ( <me> <self> )
)

(object - player
    name "clear umbrella"
    vocab ( <clear> <umbrella> )
)
(object - player
    name "black umbrella"
    vocab ( <black> <umbrella> )
)
(object - player
    name "glass box"
    vocab ( <glass> <box> )
    is_container 1
    is_open 0
)

(object topics -)
(object - topics name "turnips" vocab (<turnip> <turnips>)
    description "Rurnips are a kind of root vegtable.")

(object compass -)
(object - compass name "north" vocab (<n> <north>) dir_prop "north")
(object - compass name "south" vocab (<s> <south>) dir_prop "south")
(object - compass name "east"  vocab (<e> <east>)  dir_prop "east")
(object - compass name "west"  vocab (<w> <west>)  dir_prop "west")

(action act-quit (<q> <quit>))
(action act-take (<get> <take>) noun)
(action act-drop <drop> noun)
(action act-move scope compass)
(action act-move (<go> <travel> <move>) scope compass)
(action act-inv  (<inv> <i> <inventory>))
(action act-inv  (<inv> <i> <inventory>) (<tall> <wide>))
(action act-look (<look> <l>))
(action act-put <put> noun (<on> <in>) noun)
(action act-examine (<x> <examine>) noun)
(action act-examine <look> <at> noun)
(action act-examine <what> (<is> <are>) scope topics)
