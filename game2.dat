(constant act-quit 0)
(constant act-take 1)
(constant act-drop 2)
(constant act-move 3)
(constant act-inv  4)
(constant act-look 5)
(constant act-put  6)
(constant act-examine 7)
(constant act-dumpobj 8)

(object gameinfo -
    player player
    intro "You awaken in a strange house with no idea how you got there. Your head pounds with a headache, your throat is parched and desperate for a drink, and even your voice is strained.\n\nWhatever happened, best to find out quickly so it doesn't happen again!")

(function test (a b c)
    (say a b c))

(action act-quit (<q> <quit>))
(action act-take (<get> <take>) noun)
(action act-drop <drop> noun)
(action act-move scope compass)
(action act-move (<go> <travel> <move>) scope compass)
(action act-inv  (<inv> <i> <inventory>))
(action act-inv  (<inv> <i> <inventory>) (<tall> <wide>))
(action act-look (<look> <l>))
(action act-put <put> noun (<on> <in>) noun)
(action act-examine (<x> <examine>) noun)
(action act-examine <look> <at> noun)
(action act-examine <what> (<is> <are>) scope topics)
(action act-dumpobj <dump> noun)